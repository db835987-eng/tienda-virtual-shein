  <!-- JAVASCRIPT -->
  <script>
    const products = [
      {id: 1, name: "Camiseta Hombre", price: 20, img: "https://via.placeholder.com/200x200?text=Camiseta"},
      {id: 2, name: "Vestido Mujer", price: 35, img: "https://via.placeholder.com/200x200?text=Vestido"},
      {id: 3, name: "Zapatos", price: 50, img: "https://via.placeholder.com/200x200?text=Zapatos"},
      {id: 4, name: "Bolso", price: 40, img: "https://via.placeholder.com/200x200?text=Bolso"},
      {id: 5, name: "Gafas", price: 15, img: "https://via.placeholder.com/200x200?text=Gafas"},
      {id: 6, name: "Reloj", price: 60, img: "https://via.placeholder.com/200x200?text=Reloj"}
    ];

    const productsContainer = document.getElementById("products");
    const cartBtn = document.getElementById("cart-btn");
    const cart = document.getElementById("cart");
    const closeCart = document.getElementById("close-cart");
    const cartItemsContainer = document.getElementById("cart-items");
    const cartTotalEl = document.getElementById("cart-total");

    let cartItems = [];

    function renderProducts() {
      products.forEach(product => {
        const div = document.createElement("div");
        div.classList.add("product-card");
        div.innerHTML = `
          <img src="${product.img}" alt="${product.name}">
          <h3>${product.name}</h3>
          <p>$${product.price}</p>
          <button onclick="addToCart(${product.id})">Agregar al carrito</button>
        `;
        productsContainer.appendChild(div);
      });
    }

    function addToCart(id) {
      const product = products.find(p => p.id === id);
      cartItems.push(product);
      renderCart();
    }

    function renderCart() {
      cartItemsContainer.innerHTML = "";
      let total = 0;
      cartItems.forEach((item, index) => {
        total += item.price;
        const div = document.createElement("div");
        div.classList.add("cart-item");
        div.innerHTML = `
          <img src="${item.img}" alt="${item.name}">
          <p>${item.name} - $${item.price}</p>
          <button onclick="removeFromCart(${index})">‚ùå</button>
        `;
        cartItemsContainer.appendChild(div);
      });
      cartTotalEl.textContent = `Total: $${total}`;
    }

    function removeFromCart(index) {
      cartItems.splice(index, 1);
      renderCart();
    }

    cartBtn.addEventListener("click", () => cart.classList.add("active"));
    closeCart.addEventListener("click", () => cart.classList.remove("active"));

    renderProducts();
  </script>
</body>
